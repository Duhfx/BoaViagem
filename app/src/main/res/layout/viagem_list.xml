<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viagem_imagem_list"
            android:layout_marginEnd="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/viagem_destino_list"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/viagem_imagem_list"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/viagem_tipo_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/viagem_imagem_list"
            android:layout_below="@id/viagem_destino_list" />

        <ImageView
            android:id="@+id/viagem_deletarViagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>